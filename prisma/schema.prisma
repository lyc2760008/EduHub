generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Tenant is the top-level scope for all tenant-owned data.
// Slug is used for subdomain/path resolution and must be unique.
model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  // Optional tenant-level timezone for portal time hints when no center is configured.
  timeZone  String?
  // Optional support contact fields for portal help/account display (no messaging links).
  supportEmail String?
  supportPhone String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations (tenant-scoped domain models + auth membership)
  students        Student[]
  parents         Parent[]
  studentParents  StudentParent[]
  memberships     TenantMembership[]
  // Audit events record tenant-scoped security + admin actions.
  auditEvents     AuditEvent[]
  // Announcements are tenant-scoped in-app notices (v1 tenant-wide only).
  announcements   Announcement[]
  // Read receipts track per-user announcement reads for engagement reporting.
  announcementReads AnnouncementRead[]
  // In-app notifications are tenant-scoped and fan out to role-targeted recipient rows.
  notifications   Notification[]
  notificationRecipients NotificationRecipient[]
  // Centers are tenant-scoped locations/settings for scheduling and reporting.
  centers         Center[]
  // Staff-to-center assignments scoped to this tenant.
  staffCenters    StaffCenter[]
  // Academic catalog entities scoped to this tenant.
  subjects        Subject[]
  levels          Level[]
  programs        Program[]
  // Instructional groups/classes scoped to this tenant.
  groups          Group[]
  groupTutors     GroupTutor[]
  groupStudents   GroupStudent[]
  // Scheduled sessions scoped to this tenant.
  sessions        Session[]
  // Session resources/homework links scoped to this tenant.
  sessionResources SessionResource[]
  // Session roster snapshots for attendance-ready workflows.
  sessionStudents SessionStudent[]
  // Attendance markings scoped to this tenant.
  attendances     Attendance[]
  // Session-level notes scoped to this tenant.
  sessionNotes    SessionNote[]
  // Homework workflow items are tenant-scoped records per session + student.
  homeworkItems   HomeworkItem[]
  // Homework files are stored in-db for the MVP implementation.
  homeworkFiles   HomeworkFile[]
  // Parent-initiated requests scoped to this tenant.
  parentRequests  ParentRequest[]
  // Magic link tokens issued for parent passwordless auth flows.
  parentMagicLinkTokens ParentMagicLinkToken[]
  // Auth rate limit events scoped to this tenant when available.
  authRateLimitEvents AuthRateLimitEvent[]
}

// User is a credentials-auth entity (email + passwordHash required).
// It is not tenant-scoped directly; tenancy is defined via memberships.
model User {
  id           String   @id @default(cuid())
  // Unique login identifier for credentials auth.
  email        String   @unique
  name         String?
  // Hashed password for credentials auth (bcrypt in seed/auth).
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  memberships         TenantMembership[]
  // Staff center assignments for tenant-scoped staff scheduling.
  staffCenters        StaffCenter[]
  groupTutors         GroupTutor[]
  sessions            Session[]
  // Session resources created by staff users.
  createdSessionResources SessionResource[] @relation("SessionResourceCreatedByUser")
  // Attendance marks applied by this staff user.
  markedAttendances   Attendance[]       @relation("AttendanceMarkedBy")
  // Session notes last updated by this staff user.
  sessionNotesUpdated SessionNote[]      @relation("SessionNoteUpdatedBy")
  // Requests resolved by this staff user for audit trails.
  resolvedParentRequests ParentRequest[] @relation("ParentRequestResolvedBy")
  // Announcement creator relation is optional because system-generated announcements are allowed.
  createdAnnouncements Announcement[] @relation("AnnouncementCreatedBy")
  // Homework items capture optional creator linkage for assignment lifecycle context.
  createdHomeworkItems HomeworkItem[] @relation("HomeworkItemCreatedByUser")
  // Homework files capture optional uploader linkage for version history visibility.
  uploadedHomeworkFiles HomeworkFile[] @relation("HomeworkFileUploadedByUser")
}

// Join table linking users to tenants with a single role per tenant.
model TenantMembership {
  id       String @id @default(cuid())
  // Foreign keys to tenant + user; role defines access within that tenant.
  tenantId String
  userId   String
  role     Role

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([tenantId])
  @@index([userId])
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum ParentRelationship {
  MOTHER
  FATHER
  GUARDIAN
  OTHER
}

// GroupType defines tenant-managed grouping for scheduling and instruction.
enum GroupType {
  GROUP
  CLASS
}

// SessionType defines how a session is scheduled and linked to roster data.
enum SessionType {
  ONE_ON_ONE
  GROUP
  CLASS
}

// SessionResourceType defines the visible resource category label.
enum SessionResourceType {
  HOMEWORK
  WORKSHEET
  VIDEO
  OTHER
}

// SessionResourceCreatedByRole tracks actor role at creation for auditability.
enum SessionResourceCreatedByRole {
  ADMIN
  TUTOR
  SYSTEM
}

// HomeworkStatus captures the assignment -> submission -> review lifecycle.
enum HomeworkStatus {
  ASSIGNED
  SUBMITTED
  REVIEWED
}

// HomeworkFileSlot identifies which workflow slot a versioned file belongs to.
enum HomeworkFileSlot {
  ASSIGNMENT
  SUBMISSION
  FEEDBACK
}

// HomeworkUploadedByRole snapshots role context at upload time.
enum HomeworkUploadedByRole {
  ADMIN
  TUTOR
  PARENT
  SYSTEM
}

// AttendanceStatus captures per-session attendance markings.
enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

// RequestType captures parent-initiated request categories (extensible later).
enum RequestType {
  ABSENCE
}

// RequestStatus tracks the admin resolution lifecycle for parent requests.
enum RequestStatus {
  PENDING
  APPROVED
  DECLINED
  WITHDRAWN
}

// Announcement status lifecycle for admin draft/publish/archive flows.
enum AnnouncementStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// Step 22.8 v1 scope is tenant-wide only unless PO later approves center-scoped enforcement.
enum AnnouncementScope {
  TENANT_WIDE
}

// Read-receipt role snapshot supports aggregate engagement slices without user exports.
enum AnnouncementReadRole {
  Parent
  Tutor
  Admin
}

// NotificationType captures in-app event taxonomy for inbox filtering and deep links.
enum NotificationType {
  ANNOUNCEMENT
  HOMEWORK
  REQUEST
}

// NotificationAudienceRole snapshots the intended audience segment for each notification row.
enum NotificationAudienceRole {
  PARENT
  TUTOR
  ADMIN
}

// Role values for tenant membership and future RBAC.
enum Role {
  Owner
  Admin
  Tutor
  Parent
  Student
}

// Audit actor type distinguishes parent, staff, and system-originated events.
enum AuditActorType {
  PARENT
  USER
  SYSTEM
}

// Audit event result supports failure filtering and support triage.
enum AuditEventResult {
  SUCCESS
  FAILURE
}

// AuditEvent is a tenant-scoped security/audit log for key portal/admin actions.
model AuditEvent {
  id           String         @id @default(cuid())
  tenantId     String
  occurredAt   DateTime       @default(now())
  actorType    AuditActorType
  actorId      String?
  // Snapshot display (email/name) at the time of action to support investigations.
  actorDisplay String?
  // Action is a stable string constant (do not store secrets).
  action       String
  // Entity type is a small enum-like string to keep query filters predictable.
  entityType   String?
  entityId     String?
  // Result is explicit to support safe success/failure filters in admin tooling.
  result       AuditEventResult @default(SUCCESS)
  // Correlation ID links audit events to request traces without storing headers/bodies.
  correlationId String?
  // Metadata must remain small and never include access codes or secrets.
  metadata     Json?
  ip           String?
  userAgent    String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, occurredAt])
  @@index([tenantId, action, occurredAt])
  @@index([tenantId, result, occurredAt])
  @@index([tenantId, entityType, occurredAt])
  @@index([tenantId, entityType, entityId])
  @@index([tenantId, action, actorDisplay, occurredAt])
}

// Announcement stores in-app notice content; v1 visibility is tenant-wide only.
model Announcement {
  id String @id @default(cuid())
  tenantId String
  title String
  body String
  status AnnouncementStatus @default(DRAFT)
  scope AnnouncementScope @default(TENANT_WIDE)
  publishedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdByUserId String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdByUser User? @relation("AnnouncementCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)
  reads AnnouncementRead[]

  @@index([tenantId, status, publishedAt])
  @@index([tenantId, createdAt])
}

// AnnouncementRead stores idempotent per-user read receipts (one row per announcement/user).
model AnnouncementRead {
  id String @id @default(cuid())
  tenantId String
  announcementId String
  readerUserId String
  roleAtRead AnnouncementReadRole
  readAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  announcement Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@unique([announcementId, readerUserId])
  @@index([tenantId, announcementId])
  @@index([tenantId, readerUserId])
  @@index([tenantId, readAt])
}

// Notification stores one tenant-scoped event row per audience role with compact payload fields.
model Notification {
  id String @id @default(cuid())
  tenantId String
  type NotificationType
  title String
  bodyPreview String?
  targetType String?
  targetId String?
  targetUrl String?
  audienceRole NotificationAudienceRole
  createdAt DateTime @default(now())
  // Creator is string-only to allow non-User actors (for example parent IDs or "system").
  createdByUserId String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  recipients NotificationRecipient[]

  @@index([tenantId, createdAt])
  @@index([tenantId, type, createdAt])
  @@index([tenantId, audienceRole, createdAt])
}

// NotificationRecipient stores per-recipient read state (readAt) for idempotent inbox actions.
model NotificationRecipient {
  id String @id @default(cuid())
  tenantId String
  notificationId String
  recipientUserId String
  readAt DateTime?
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)

  @@unique([notificationId, recipientUserId])
  @@index([tenantId, recipientUserId, createdAt])
  @@index([tenantId, recipientUserId, readAt])
  @@index([tenantId, notificationId])
}

model Student {
  id            String        @id @default(cuid())
  tenantId      String
  firstName     String
  lastName      String
  preferredName String?
  dateOfBirth   DateTime?
  grade         String?
  // Optional tenant-scoped catalog level for reporting and filters.
  levelId       String?
  status        StudentStatus @default(ACTIVE)
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  tenant          Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  level           Level?           @relation(fields: [levelId], references: [id], onDelete: SetNull)
  parents         StudentParent[]
  groupStudents   GroupStudent[]
  sessionStudents SessionStudent[]
  // Homework workflow rows for this student across sessions.
  homeworkItems   HomeworkItem[]
  // Attendance markings for this student.
  attendances     Attendance[]
  // Parent-initiated requests for this student.
  parentRequests  ParentRequest[]

  @@index([tenantId, lastName])
  @@index([tenantId, createdAt])
}

model Parent {
  id        String   @id @default(cuid())
  tenantId  String
  firstName String
  lastName  String
  email     String
  phone     String?
  notes     String?
  // Tracks whether the parent has dismissed the first-login welcome card in the portal.
  hasSeenWelcome Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  students StudentParent[]
  // Parent-initiated requests tied to this parent.
  parentRequests ParentRequest[]
  // Parent-issued magic link tokens for passwordless auth.
  magicLinkTokens ParentMagicLinkToken[]

  // A parent email should be unique per tenant when provided
  @@unique([tenantId, email])
  @@index([tenantId, lastName])
}

// Magic link tokens for parent passwordless sign-in (single-use + short TTL).
model ParentMagicLinkToken {
  id           String   @id @default(cuid())
  tenantId     String
  parentUserId String
  tokenHash    String   @unique
  rememberMe   Boolean  @default(true)
  expiresAt    DateTime
  consumedAt   DateTime?
  createdAt    DateTime @default(now())
  // Hashed IP stored for rate limiting and abuse detection (no raw IPs).
  createdIpHash String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  parent Parent @relation(fields: [parentUserId], references: [id], onDelete: Cascade)

  @@index([tenantId, parentUserId])
  @@index([expiresAt])
  @@index([consumedAt])
}

// Auth rate limit events to support serverless-safe throttling (no raw PII).
model AuthRateLimitEvent {
  id        String   @id @default(cuid())
  kind      String
  tenantId  String?
  ipHash    String
  emailHash String
  createdAt DateTime @default(now())

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([kind, createdAt])
  @@index([kind, ipHash, createdAt])
  @@index([kind, emailHash, createdAt])
}

model StudentParent {
  id           String              @id @default(cuid())
  tenantId     String
  studentId    String
  parentId     String
  relationship ParentRelationship?

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  parent  Parent  @relation(fields: [parentId], references: [id], onDelete: Cascade)

  @@unique([tenantId, studentId, parentId])
  @@index([tenantId])
  @@index([studentId])
  @@index([parentId])
}

// Center represents a tenant-owned location with local timezone and address data.
model Center {
  id         String   @id @default(cuid())
  tenantId   String
  name       String
  // IANA timezone name used for scheduling (ex: "America/Edmonton").
  timezone   String
  isActive   Boolean  @default(true)
  address1   String?
  address2   String?
  city       String?
  province   String?
  postalCode String?
  country    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  // Staff members assigned to this center.
  staffMembers StaffCenter[]
  groups       Group[]
  sessions     Session[]

  @@unique([tenantId, name])
  @@index([tenantId])
  @@index([tenantId, isActive])
}

// Subject is a tenant-scoped academic subject for catalog tagging.
model Subject {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  programs Program[]

  @@unique([tenantId, name])
  @@index([tenantId])
}

// Level is a tenant-scoped catalog level (ex: Grade/Level 1).
model Level {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  // Sort order is tenant-managed for consistent ordering in UIs.
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  programs Program[]
  groups   Group[]
  students Student[]

  @@unique([tenantId, name])
  @@index([tenantId])
}

// Program is a tenant-scoped offering with optional catalog links.
model Program {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  // Optional catalog links allow partial setups without blocking creation.
  subjectId String?
  levelId   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  subject Subject? @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  level   Level?   @relation(fields: [levelId], references: [id], onDelete: SetNull)
  groups  Group[]

  @@unique([tenantId, name])
  @@index([tenantId])
}

// Group represents a tenant-scoped instructional grouping (GROUP or CLASS).
model Group {
  id        String    @id @default(cuid())
  tenantId  String
  name      String
  type      GroupType
  centerId  String
  programId String
  levelId   String?
  isActive  Boolean   @default(true)
  capacity  Int?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Tenant-scoped relations.
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  center  Center  @relation(fields: [centerId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  level   Level?  @relation(fields: [levelId], references: [id], onDelete: SetNull)

  // Replace-set semantics use join tables for roster/tutor assignment.
  tutors   GroupTutor[]
  students GroupStudent[]
  // Sessions can optionally reference a group/class for roster snapshots.
  sessions Session[]

  @@index([tenantId])
  @@index([tenantId, centerId])
  @@index([tenantId, programId])
}

// GroupTutor links tenant-scoped groups to staff users with replace-set semantics.
model GroupTutor {
  id       String @id @default(cuid())
  tenantId String
  groupId  String
  userId   String

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  group  Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, groupId, userId])
  @@index([tenantId, userId])
  @@index([tenantId, groupId])
}

// GroupStudent links tenant-scoped groups to students with replace-set semantics.
model GroupStudent {
  id        String @id @default(cuid())
  tenantId  String
  groupId   String
  studentId String

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  group   Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([tenantId, groupId, studentId])
  @@index([tenantId, studentId])
  @@index([tenantId, groupId])
}

// StaffCenter links tenant-scoped staff users to the centers they can work from.
model StaffCenter {
  id       String @id @default(cuid())
  tenantId String
  userId   String
  centerId String

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  center Center @relation(fields: [centerId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId, centerId])
  @@index([tenantId])
  @@index([userId])
  @@index([centerId])
}

// Session represents a single scheduled instructional session (no recurrence yet).
model Session {
  id          String      @id @default(cuid())
  tenantId    String
  centerId    String
  tutorId     String
  sessionType SessionType
  groupId     String?
  // Optional meeting URL; validate/normalize in the server layer before persisting.
  zoomLink    String?
  // Cancel metadata for bulk operations when status enum is not present.
  canceledAt  DateTime?
  cancelReasonCode String?
  startAt     DateTime
  endAt       DateTime
  // Store the IANA timezone string provided by the client for display.
  timezone    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  center Center @relation(fields: [centerId], references: [id], onDelete: Cascade)
  tutor  User   @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  group  Group? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  // Roster snapshot rows live in SessionStudent; attendance is stored separately.
  sessionStudents SessionStudent[]
  // Attendance markings captured per student for this session.
  attendances     Attendance[]
  // Staff-authored session notes for this session (one per session enforced by unique constraint).
  sessionNotes    SessionNote[]
  // URL-only learning resources and homework links attached to this session.
  resources       SessionResource[]
  // Homework lifecycle rows scoped per student for this session.
  homeworkItems   HomeworkItem[]
  // Parent-initiated requests tied to this session.
  parentRequests  ParentRequest[]

  @@unique([tenantId, tutorId, centerId, startAt])
  @@index([tenantId, startAt])
  @@index([tenantId, centerId, startAt])
  @@index([tenantId, tutorId, startAt])
}

// SessionResource stores URL-only resource links shared with tutors/parents for a session.
model SessionResource {
  id              String                       @id @default(cuid())
  tenantId        String
  sessionId       String
  title           String
  url             String
  type            SessionResourceType
  createdAt       DateTime                     @default(now())
  updatedAt       DateTime                     @updatedAt
  createdByUserId String?
  createdByRole   SessionResourceCreatedByRole

  tenant        Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session       Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdByUser User?   @relation("SessionResourceCreatedByUser", fields: [createdByUserId], references: [id], onDelete: SetNull)

  // Duplicate prevention is handled in server logic (URL+type checks) to keep migrations low-risk.
  @@index([tenantId, sessionId])
}

// HomeworkItem stores one workflow row per tenant + session + student.
model HomeworkItem {
  id              String         @id @default(cuid())
  tenantId        String
  sessionId       String
  studentId       String
  status          HomeworkStatus @default(ASSIGNED)
  assignedAt      DateTime?
  submittedAt     DateTime?
  reviewedAt      DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  createdByUserId String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdByUser User? @relation("HomeworkItemCreatedByUser", fields: [createdByUserId], references: [id], onDelete: SetNull)
  files HomeworkFile[]

  @@unique([tenantId, sessionId, studentId])
  @@index([tenantId, status, updatedAt])
  @@index([tenantId, studentId, status])
  @@index([tenantId, sessionId])
}

// HomeworkFile stores versioned slot files.
// v1 persists bytes in Postgres; API validation enforces <= 5MB per file and the storage seam keeps future object storage migration low-risk.
model HomeworkFile {
  id               String                 @id @default(cuid())
  tenantId         String
  homeworkItemId   String
  slot             HomeworkFileSlot
  version          Int
  filename         String
  mimeType         String
  sizeBytes        Int
  bytes            Bytes
  checksum         String?
  uploadedByUserId String?
  uploadedByRole   HomeworkUploadedByRole
  uploadedAt       DateTime               @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  homeworkItem HomeworkItem @relation(fields: [homeworkItemId], references: [id], onDelete: Cascade)
  uploadedByUser User? @relation("HomeworkFileUploadedByUser", fields: [uploadedByUserId], references: [id], onDelete: SetNull)

  @@unique([homeworkItemId, slot, version])
  @@index([tenantId, homeworkItemId, slot])
  @@index([tenantId, uploadedAt])
}

// SessionStudent captures the roster snapshot at creation time.
// Attendance data is stored separately to keep roster snapshots immutable.
model SessionStudent {
  id        String   @id @default(cuid())
  tenantId  String
  sessionId String
  studentId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([tenantId, sessionId, studentId])
  @@index([tenantId, sessionId])
  @@index([tenantId, studentId])
}

// Attendance stores per-session attendance markings for students on the roster.
model Attendance {
  id             String           @id @default(cuid())
  tenantId       String
  sessionId      String
  studentId      String
  status         AttendanceStatus
  // Optional per-student note for this session.
  note           String?
  // Parent-facing note visible in the parent portal only (never expose staff-only notes).
  parentVisibleNote String?
  // Track parent-visible note edits for audit and portal freshness hints.
  parentVisibleNoteUpdatedAt DateTime?
  markedByUserId String
  markedAt       DateTime         @default(now())
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  tenant       Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session      Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  student      Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  markedByUser User    @relation("AttendanceMarkedBy", fields: [markedByUserId], references: [id], onDelete: Cascade)

  @@unique([tenantId, sessionId, studentId])
  @@index([tenantId, sessionId])
  @@index([tenantId, studentId])
}

// SessionNote stores staff-authored notes scoped to a single session.
model SessionNote {
  id                String   @id @default(cuid())
  // Tenant scope for isolation and indexing.
  tenantId          String
  // Session this note belongs to (one note per session).
  sessionId         String
  // Staff-only note (never exposed to parents).
  internalNote      String?
  // Note intended for parents/portal in a later phase.
  parentVisibleNote String?
  // Optional homework follow-up.
  homework          String?
  // Optional next steps for the student/family.
  nextSteps         String?
  // Staff user who last updated this note.
  updatedByUserId   String
  // Auditable timestamps for session note edits.
  updatedAt         DateTime @default(now()) @updatedAt
  createdAt         DateTime @default(now())

  tenant        Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session       Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  updatedByUser User    @relation("SessionNoteUpdatedBy", fields: [updatedByUserId], references: [id], onDelete: Cascade)

  @@unique([tenantId, sessionId])
  @@index([tenantId, sessionId])
}

// ParentRequest stores parent-submitted requests (currently absence only).
// Requests are write-lite: they do NOT cancel or reschedule sessions.
// Portal exposure must remain tenant- and parent-scoped, returning only safe fields.
model ParentRequest {
  id               String        @id @default(cuid())
  tenantId         String
  parentId         String
  studentId        String
  sessionId        String
  type             RequestType
  status           RequestStatus @default(PENDING)
  reasonCode       String
  message          String?       @db.Text
  // Timestamp for parent-initiated withdraw action (optional audit trail).
  withdrawnAt      DateTime?
  // Parent id captured at withdraw time to preserve the actor for audit.
  withdrawnByParentId String?
  // Timestamp for parent-initiated resubmission of a withdrawn request.
  resubmittedAt    DateTime?
  resolvedByUserId String?
  resolvedAt       DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  tenant         Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  parent         Parent  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  student        Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  session        Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  resolvedByUser User?   @relation("ParentRequestResolvedBy", fields: [resolvedByUserId], references: [id], onDelete: SetNull)

  // Enforce one request per student + session + type across the tenant (regardless of parent) to prevent duplicates.
  // Resubmissions must update this same record rather than creating new rows.
  @@unique([tenantId, studentId, sessionId, type])
  @@index([tenantId, status, createdAt])
  @@index([tenantId, parentId, createdAt])
}
