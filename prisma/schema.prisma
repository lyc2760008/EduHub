generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Tenant is the top-level scope for all tenant-owned data.
// Slug is used for subdomain/path resolution and must be unique.
model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations (tenant-scoped domain models + auth membership)
  students  Student[]
  parents   Parent[]
  studentParents StudentParent[]
  memberships   TenantMembership[]
  // Centers are tenant-scoped locations/settings for scheduling and reporting.
  centers Center[]
}

// User is a credentials-auth entity (email + passwordHash required).
// It is not tenant-scoped directly; tenancy is defined via memberships.
model User {
  id           String   @id @default(cuid())
  // Unique login identifier for credentials auth.
  email        String   @unique
  name         String?
  // Hashed password for credentials auth (bcrypt in seed/auth).
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  memberships TenantMembership[]
}

// Join table linking users to tenants with a single role per tenant.
model TenantMembership {
  id       String @id @default(cuid())
  // Foreign keys to tenant + user; role defines access within that tenant.
  tenantId String
  userId   String
  role     Role

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([tenantId])
  @@index([userId])
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum ParentRelationship {
  MOTHER
  FATHER
  GUARDIAN
  OTHER
}

// Role values for tenant membership and future RBAC.
enum Role {
  Owner
  Admin
  Tutor
  Parent
  Student
}

model Student {
  id            String         @id @default(cuid())
  tenantId      String
  firstName     String
  lastName      String
  preferredName String?
  dateOfBirth   DateTime?
  grade         String?
  status        StudentStatus  @default(ACTIVE)
  notes         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  tenant        Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  parents       StudentParent[]

  @@index([tenantId, lastName])
  @@index([tenantId, createdAt])
}

model Parent {
  id        String   @id @default(cuid())
  tenantId  String
  firstName String
  lastName  String
  email     String
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  students StudentParent[]

  // A parent email should be unique per tenant when provided
  @@unique([tenantId, email])
  @@index([tenantId, lastName])
}

model StudentParent {
  id           String             @id @default(cuid())
  tenantId     String
  studentId    String
  parentId     String
  relationship ParentRelationship?

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  parent  Parent  @relation(fields: [parentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([parentId])
  @@unique([tenantId, studentId, parentId])
}

// Center represents a tenant-owned location with local timezone and address data.
model Center {
  id         String   @id @default(cuid())
  tenantId   String
  name       String
  // IANA timezone name used for scheduling (ex: "America/Edmonton").
  timezone   String
  isActive   Boolean  @default(true)
  address1   String?
  address2   String?
  city       String?
  province   String?
  postalCode String?
  country    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
  @@index([tenantId])
  @@index([tenantId, isActive])
}
